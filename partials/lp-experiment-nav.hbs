<section id="experiment_nav">
	<table>
		<tr>
			<td class="active">
				<p class="icon" id="icon_current"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></p>
				<p class="icon_text">Current</p>
			</td>
			<td>
				<p class="icon" id="icon_record"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span></p>
				<p class="icon_text">Record</p>
			</td>
			<td>
				<p class="icon" id="icon_material"><span class="glyphicon glyphicon-book" aria-hidden="true"></span></p>
				<p class="icon_text">Material</p>
			</td>
